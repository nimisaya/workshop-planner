<%= form_with model: @workshop, local: true do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <br>
    <br>
    <%= f.label :private, 'Would you like to make it private?' %>
    <br>
    <br>
    <div class="radio-button">
        <%= f.radio_button :private, true, :checked => true, :value => true %>
        <%= f.label :private, 'Private', value: true %>
        <br>
        <%= f.radio_button :private, false, :value => false %>
        <%= f.label :private, 'Public', value: false %>
    </div>
    <br>
    <%= f.submit :class => 'primary-button button-link'%>
<% end %>