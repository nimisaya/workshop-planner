<h2><%= @workshop.title %></h2>
<p><%= @workshop.description %></p>
<% if @workshop.user.present?%>
   <p>Created by: <%= @workshop.user.username %></p>
<% end %>
<p>Private? <%= @workshop.private %></p>

<strong>Tasks:</strong>
<ol>
<% @workshop.tasks.each do |task| %>
<li> <%= task.title %></li>
<% end %>
</ol>

<%= link_to 'Edit', edit_workshop_path(@workshop.id) %>
<%= link_to 'Delete', workshop_path(@workshop.id), method: 'delete' %>
<%= link_to 'Add Tasks', edit_workshop_tasks_path %>
<%= link_to 'Clone workshop', clone_workshop_path %>
<p><%= @workshop_time %></p>
