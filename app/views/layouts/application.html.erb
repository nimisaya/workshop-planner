<!DOCTYPE html>
<html>
  <head>
    <title>WorkshopPlannerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <div id="wrapper">
    <header>
      <nav aria-label="Account menu">
        <ul>
        <% if @current_user.present? %>
          <li id="greeting-user">
            <%= @current_user.username %>
          </li>
          <li>
            <%= link_to 'My workshops', workshops_path, class: "nav-button" %>
          </li>
          <li>
            <%= link_to 'Logout', login_path, method: 'delete', class: "nav-button" %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Workshops', workshops_path, class: "nav-button" %>
          </li>
          <li>
            <%= link_to 'Login', login_path, class: "nav-button"  %>
          </li>
          <li>
            <%= link_to 'Join', new_user_path, class: "nav-button"  %>
          </li>
        <% end %>
        </ul>
      </nav>
      <h1 id="logo">
        <%= link_to 'Workshop Planner', workshops_path %>
      </h1>
      </header>
      <main>
        <%= yield %>
      </main>
      <footer> 
        <small>&copy; Amanda Jarvinen, 2020</small> 
      </footer>
    </div><!-- #wrapper -->
  </body>
</html>
